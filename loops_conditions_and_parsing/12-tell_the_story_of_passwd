#!/usr/bin/env bash
# This script displays formatted information about users from /etc/passwd.

# Open the /etc/passwd file and read line by line
while IFS=: read -r username _ userid _ homedir shell; do
    # Get the group ID from the user ID (assumes user ID is numeric)
    group_id=$((userid / 1000)) # This is a simplification for demonstration

    # Format the output as required
    echo "The user $username is part of the $group_id gang, lives in $homedir and rides $shell."
    echo "User ID's place is protected by the passcode $userid, more info about the user here: $userid."
    echo "-------------------"
done < /etc/passwd
